#wp-rp-hanger {
	background:#fff;
	margin: 0;
	padding: 5px 10px 10px 10px;
	width: 205px;
	position: absolute;
	z-index:100000;
	border: 1px solid #b0b0b0;
	border-top: 0;
	border-bottom: 2px solid #82c1cb;
	-moz-box-shadow: 0 0 5px rgba(0,0,0,.3);
	-webkit-box-shadow: 0 0 5px rgba(0,0,0,.3);
	box-shadow: 0 0 5px rgba(0,0,0,.3);
}
#wp-rp-hanger h3 {
	font-weight: bold;
	font-size: 12px;
	line-height: 19px;
	text-shadow: none;
	color: #888;
	margin: 0 0 5px 0;
	padding: 0;
}
#wp-rp-hanger ul {margin:0;padding:0;overflow:hidden;}
#wp-rp-hanger img {
	width: 100px;
	height: 100px;
	display: block;
	border: 0;
}
#wp-rp-hanger li {
	list-style: none;
	width: 100px;
	float: left;
	margin: 0 0 0 5px;
	padding: 0;
	background: none;
	position: relative;
	border: 1px solid #b0b0b0;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	overflow: hidden;
}
#wp-rp-hanger li:first-child { margin-left: 0; }
#wp-rp-hanger li a {
	display: block;
	line-height: 1em;
}
#wp-rp-hanger li a,
#wp-rp-hanger li a:hover {
	text-decoration: none;
}
#wp-rp-hanger li a.second {
	position: absolute;
	bottom:0;
	font-size: 11px;
	line-height: 1.3em;
	color: #fff;
	background: #000;
	background: rgba(0,0,0,.5);
	padding: 4px 8px;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	height: 34px;
	width: 100%;
	overflow: hidden;
}
#wp-rp-hanger li:hover {
	border-color: #82c1cb;
}
#wp-rp-hanger li:hover a.second {
	background: #82c1cb;
	background: rgba(130, 193, 203, .8);
}
