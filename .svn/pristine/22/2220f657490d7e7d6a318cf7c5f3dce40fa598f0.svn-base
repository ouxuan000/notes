/*修改left*/
#leftmenu {width:120px;}
#main {margin-left: 120px;margin-right: 300px}
div.News {padding-left:2px;padding-right:2px;}
/*邮件订阅*/
.feed-mail {
    border: 1px solid #CCCCCC;
    border-radius: 4px 4px 4px 4px;
    box-shadow: 0 0 4px #EEEEEE;
    margin-bottom: 10px;
    padding: 12px 0 12px 0px;
	width:336px;
}
.feed-mail-input {
    background-color: #FFFFFF;
    border: 1px solid #CCCCCC;
     padding: 4px;
    vertical-align: middle;
    width: 204px;
}
.feed-mail-btn {
    border: 1px solid #CCCCCC;
    cursor: pointer;
    height: 30px;
    margin-left: -1px;
    vertical-align: middle;
    width: 60px;
	background-color: #F0F0F0;
    background-image: -moz-linear-gradient(#F9F9F9, #F0F0F0);
    color: #555555;
}
.feed-mail input, textarea {
    color: #444444;
    font-family: microsoft yahei,verdana,arial;
    font-size: 12px;
}

